<div class="text-center">
   <h1 class="alert alert-danger mt-3 mb-5">PRODUCT LIST</h1>
   <div class="row">
      {{#each products }}
      <div class="col-md-3 mt-3 mb-3">
         <a href="/products/detail/{{_id}}">
            <img class="card-img-top" src="{{ image }}" width="100" height="400">
         </a>
         <div class="card-body">
            <h2 class="card-title text-primary">{{ title }}</h2>
            <button>Add to cart</button>
         </div>
      </div>
      {{/each}}
   </div>
</div>
