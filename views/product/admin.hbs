<table class="table table-primary text-center">
   <thead>
      <tr>
         <th colspan="4" class="h1 text-danger">PRODUCT LIST</th>
         <th>
            <a href="/product/add" class="btn btn-primary">Add</a>
         </th>
      </tr>
      <tr>
         <th colspan="2">
            <form action="/product/search" method="post">
               <input class="form-control" type="search" name="name"
               placeholder="Search by name" required>
            </form>
         </th>
         <th colspan="2">
            <a href="/product/sort/asc" class="btn btn-secondary">Price ASC</a>
            <a href="/product/sort/desc" class="btn btn-success">Price DESC</a>
         </th>
      </tr>
      <tr>
         <th>Product Name</th>
         <th>Product Role</th>
         <th> Product Bounty</th>
         <th>Product image</th>
         <th>Menu</th>
      </tr>
   </thead>
   <tbody>
      {{#each products }}
      <tr>
         <td>{{ name }}</td>
         <td>{{ role }}</td>
         <td>${{ bounty }}</td>
         <td>
            <a href="/product/detail/{{ _id }}">
               <img src="{{ image }}" alt="product image" width="100" height="120">
            </a>
         </td>
         <td>
            <a class="btn btn-info" href="/product/detail/{{ _id }}">Detail</a>
            <a class="btn btn-warning" href="/product/edit/{{ _id }}">Edit</a>
            <a class="btn btn-danger" href="/product/delete/{{ _id }}"
               onclick="return confirm('Are you sure to delete this product?')">Delete</a>
         </td>
      </tr>
      {{/each}}
   </tbody>
</table>
